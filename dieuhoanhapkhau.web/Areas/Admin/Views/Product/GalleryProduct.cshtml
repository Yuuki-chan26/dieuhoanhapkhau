<script type="text/javascript">
    var pSize = 7;
    var maxIndex = 0;
    var ofString = "of";
    function cubeGalleryCustomiz(pIndex, gCat) {
        pIndex = parseInt(pIndex);
        $(".gallerylist li[class!=paging]").removeAttr("index", "").hide();
        if (pIndex == 1) {
            $(".gallery_category li").removeClass("on");
            $(".gallery_category li a." + gCat).parent().addClass("on");
        }
        var arr;
        if (gCat != "All")
            arr = $(".gallerylist li." + gCat);
        else
            arr = $(".gallerylist li[class!=paging]");
        var iIndex;
        for (iIndex = (pIndex - 1) * pSize; iIndex < pIndex * pSize; iIndex++) {
            if (iIndex < arr.length) {
                maxIndex = iIndex; $(arr[iIndex]).attr("index", iIndex).show();
            }
            else
                break;
        }

        var pHTML = "";
        if (pIndex > 1)
            pHTML += "<a class=\"prev\" href=\"javascript:cubeGalleryCustomiz('" + String(pIndex - 1) + "','" + gCat + "')\">prev</a>";
        pHTML += "<b>" + String(pIndex) + "</b> of " + String(Math.ceil(arr.length / pSize));
        if (iIndex < arr.length - 1) {
            pHTML += "<a class=\"next\" href=\"javascript:cubeGalleryCustomiz('" + String(pIndex + 1) + "','" + gCat + "')\">next</a>";
        }
        $(".gallerylist li.paging").html(pHTML);
        
    }
    cubeGalleryCustomiz('1', $(".gallery_category li:first a").attr("class"));

</script>
