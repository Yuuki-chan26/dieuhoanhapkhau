@using dieuhoanhapkhau.biz.Models
@model List<Product>
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-inner">
    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">Home</a>
            </li>
            <li><a href="@Url.Action("Admin", "Account")">Dashboard</a></li>
            <li class="active">Danh sách sản phẩm</li>
        </ul>
        <!-- /.breadcrumb -->

    </div>

    <div class="page-content">


        <div class="page-header">
            <h1>
                Danh sách sản phẩm
            </h1>
        </div>
        <!-- /.page-header -->
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <div class="row">
                    <div class="col-xs-12">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "manageForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" id="ProductId" />
                            <input type="hidden" name="IsActive" id="IsActive" />
                            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã sản phẩm</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Loại sản phẩm</th>
                                        <th>Số lượng sản phẩm</th>
                                        <th class="hidden-480">Status</th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (Product item in Model)
                                        {
                                    <tr>

                                        <td>
                                            @item.ProductCode
                                        </td>
                                        <td>
                                            @item.ProductName
                                        </td>
                                        <td>@item.PrdCategoryTitle</td>
                                        <td>@item.Quality</td>
                                        <th class="hidden-480">
                                            @if (item.IsActive)
                                            {
                                                <span class="label label-sm label-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="label label-sm label-danger">UnActive</span>
                                            }
                                        </th>

                                        <td>
                                            <div class="hidden-sm hidden-xs btn-group">

                                                <a class="btn btn-xs btn-info" href="@Url.Action("Update", "Product", new { Id = item.ProductId })">
                                                    <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                </a>

                                                
                                                <a class="btn btn-xs btn-danger delete-prompt" href="javascript:" title="Delete" onclick="Delete('@item.ProductId')">
                                                    <i class="ace-icon fa fa-trash bigger-120"></i>
                                                </a>
                                            </div>

                                            <div class="hidden-md hidden-lg">
                                                <div class="inline pos-rel">
                                                    <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                        <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                                    </button>

                                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                        <li>
                                                            <a href="#" class="tooltip-info" data-rel="tooltip" title="Promote">
                                                                <span class="green">
                                                                    <i class="ace-icon fa fa-arrow-circle-up bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <a href="#" class="tooltip-success" data-rel="tooltip" title="Demote">
                                                                <span class="yellow">
                                                                    <i class="ace-icon fa fa-arrow-circle-down bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="#" class="tooltip-success" data-rel="tooltip" title="ChangePass">
                                                                <span class="blue">
                                                                    <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            @if (item.IsActive)
                                                            {
                                                                <a href="#" class="tooltip-error" data-rel="tooltip" title="Lock">
                                                                    <span class="red">

                                                                        <i class="ace-icon fa fa-lock bigger-120"></i>

                                                                    </span>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a href="#" class="tooltip-error" data-rel="tooltip" title="UnLock">
                                                                    <span class="red">

                                                                        <i class="ace-icon fa fa-unlock bigger-120"></i>

                                                                    </span>
                                                                </a>
                                                            }
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <a href="@Url.Action("Create")" class="btn btn-success">Tạo mới</a>
                    </div>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.page-content -->
</div>
<script type="text/javascript">
    jQuery(function ($) {
        var oTable1 =
            $('#dynamic-table')
                .dataTable({
                    bAutoWidth: false,
                    "aoColumns": [
                        null, null, null, null,
                        { "bSortable": false }
                    ],
                    "aaSorting": [],
                });
        $('[data-rel="tooltip"]').tooltip({ placement: tooltip_placement });


        function tooltip_placement(context, source) {
            var $source = $(source);
            var $parent = $source.closest('table')
            var off1 = $parent.offset();
            var w1 = $parent.width();
            var off2 = $source.offset();
            if (parseInt(off2.left) < parseInt(off1.left) + parseInt(w1 / 2)) return 'right';
            return 'left';
        }
        
    })
</script>
<script>
    function Delete(id) {
    if (id!=null) {
            bootbox.confirm({
                title: "Thông báo!",
                message: "Đồng ý xóa sản phẩm: '" + id + "' ?",
                buttons: {
                    'cancel': {
                        label: 'Cancel',
                        className: 'btn mybtn-Button btnButton'
                    },
                    'confirm': {
                        label: 'OK',
                        className: 'btn mybtn-Button btnButton'
                    }
                },
                callback: function (result) {
                    debugger;
                    if (result) {
                        var url = '@Url.Action("Delete", "Product")';
                        //yêu cầu mã xác thực
                        var __RequestVerificationToken = $('input[name=__RequestVerificationToken]').val();
                        $.ajax({
                            url: url,
                            data: {
                                id: id,
                                __RequestVerificationToken: __RequestVerificationToken
                            },
                            type: 'post',
                            //dataType: 'json',
                            success: function (data) {

                                if (data) {
                                    alert("Success!!!");
                                    window.location.href = window.location.href;

                                } else {
                                    _showErrorMsg123("Lỗi!",data.Detail);
                                }
                            }
                        });
                    }
                }
            });
        } else {
            alert("Chưa chọn bản ghi cần xóa!");
            return;
        }
    }
</script>
<script type="text/javascript">
    setAdminCurrentUrl('@Url.Action("Search", "Product")');
</script>
