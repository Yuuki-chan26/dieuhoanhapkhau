@using idocNet.Core.Extensions
@using dieuhoanhapkhau.biz.Models
@model List<ProductProperty>
@{
                /**/

                ViewBag.Title = "Danh sách thuộc tính sản phẩm";
                Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-inner">
    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">Home</a>
            </li>
            <li><a href="@Url.Action("Admin", "Account")">Dashboard</a></li>
            <li><a href="@Url.Action("Search", "Product")">Danh sách sản phẩm</a></li>
            
        </ul>
        <!-- /.breadcrumb -->

    </div>

    <div class="page-content">


        <div class="page-header">
            <h1>
                Danh sách thuộc tính 
            </h1>
        </div>
        <!-- /.page-header -->
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <div class="row">
                    <div class="col-xs-12">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "manageForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" id="ProductPropertyId" />
                            <input type="hidden" name="productid" id="ProductId" />
                            <input type="hidden" name="IsActive" id="IsActive" />
                            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Tên thuộc tính</th>
                                        
                                        <th class="hidden-480">Status</th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (ProductProperty item in Model)
                                        {
                                            <tr>

                                                <td>
                                                    @item.ProductPropertyTitle
                                                </td>
                                                
                                                <th class="hidden-480">
                                                    @if (item.IsActive)
                                                    {
                                                        <span class="label label-sm label-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="label label-sm label-danger">UnActive</span>
                                                    }
                                                </th>
                                                <td>
                                                    <div class="hidden-sm hidden-xs btn-group">

                                                        <a class="btn btn-xs btn-info" href="@Url.Action("UpdatePro", "Product", new { Id = item.ProductPropertyId })">
                                                            <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                        </a>
                                                        <a href="javascript:" class="btn btn-xs btn-danger" onclick="Delete('@item.ProductPropertyId')">

                                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                        </a>
                                                    </div>

                                                    <div class="hidden-md hidden-lg">
                                                        <div class="inline pos-rel">
                                                            <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                                <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                                            </button>

                                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                                <li>
                                                                    <a href="#" class="tooltip-info" data-rel="tooltip" title="Promote">
                                                                        <span class="green">
                                                                            <i class="ace-icon fa fa-arrow-circle-up bigger-120"></i>
                                                                        </span>
                                                                    </a>
                                                                </li>

                                                                <li>
                                                                    <a href="#" class="tooltip-success" data-rel="tooltip" title="Demote">
                                                                        <span class="yellow">
                                                                            <i class="ace-icon fa fa-arrow-circle-down bigger-120"></i>
                                                                        </span>
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a href="#" class="tooltip-success" data-rel="tooltip" title="ChangePass">
                                                                        <span class="blue">
                                                                            <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                                        </span>
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    @if (item.IsActive)
                                                                    {
                                                                        <a href="#" class="tooltip-error" data-rel="tooltip" title="Lock">
                                                                            <span class="red">

                                                                                <i class="ace-icon fa fa-lock bigger-120"></i>

                                                                            </span>
                                                                        </a>
                                                                    }
                                                                    else
                                                                    {
                                                                        <a href="#" class="tooltip-error" data-rel="tooltip" title="UnLock">
                                                                            <span class="red">

                                                                                <i class="ace-icon fa fa-unlock bigger-120"></i>

                                                                            </span>
                                                                        </a>
                                                                    }
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <a href="@Url.Action("CreatePro")" class="btn btn-success">Tạo mới</a>
                    </div>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.page-content -->
</div>
<script type="text/javascript">
    jQuery(function ($) {
        //initiate dataTables plugin
        var oTable1 =
        $('#dynamic-table')
        //.wrap("<div class='dataTables_borderWrap' />")   //if you are applying horizontal scrolling (sScrollX)
        .dataTable({
            bAutoWidth: false,
            "aoColumns": [
					  null, null,
					  { "bSortable": false }
            ],
            "aaSorting": [],

            //,
            //"sScrollY": "200px",
            //"bPaginate": false,

            //"sScrollX": "100%",
            //"sScrollXInner": "120%",
            //"bScrollCollapse": true,
            //Note: if you are applying horizontal scrolling (sScrollX) on a ".table-bordered"
            //you may want to wrap the table inside a "div.dataTables_borderWrap" element

            //"iDisplayLength": 50
        });
        //oTable1.fnAdjustColumnSizing();



        /********************************/
        //add tooltip for small view action buttons in dropdown menu
        $('[data-rel="tooltip"]').tooltip({ placement: tooltip_placement });

        //tooltip placement on right or left
        function tooltip_placement(context, source) {
            var $source = $(source);
            var $parent = $source.closest('table')
            var off1 = $parent.offset();
            var w1 = $parent.width();

            var off2 = $source.offset();
            //var w2 = $source.width();

            if (parseInt(off2.left) < parseInt(off1.left) + parseInt(w1 / 2)) return 'right';
            return 'left';
        }

    })
    function Delete(id) {
    if (id!=null) {
            bootbox.confirm({
                title: "Thông báo!",
                message: "Đồng ý xóa sản phẩm: '" + id + "' ?",
                buttons: {
                    'cancel': {
                        label: 'Cancel',
                        className: 'btn mybtn-Button btnButton'
                    },
                    'confirm': {
                        label: 'OK',
                        className: 'btn mybtn-Button btnButton'
                    }
                },
                callback: function (result) {
                    debugger;
                    if (result) {
                        var url = '@Url.Action("DeletePro", "Product")';
                        //yêu cầu mã xác thực
                        var __RequestVerificationToken = $('input[name=__RequestVerificationToken]').val();
                        $.ajax({
                            url: url,
                            data: {
                                id: id,
                                __RequestVerificationToken: __RequestVerificationToken
                            },
                            type: 'post',
                            //dataType: 'json',
                            success: function (data) {

                                if (data) {
                                    alert("Success!!!");
                                    window.location.href = window.location.href;

                                } else {
                                    _showErrorMsg123("Lỗi!",data.Detail);
                                }
                            }
                        });
                    }
                }
            });
        } else {
            alert("Chưa chọn bản ghi cần xóa!");
            return;
        }
    }
</script>

<script type="text/javascript">
    setAdminCurrentUrl('@Url.Action("Search", "Product")');
</script>
