                    {
                        var listItemCart = Model.Cart.ListItem as List<CartItem>;
                        modelCarts = listItemCart;
                        decimal totalMoney = 0;
                        if (listItemCart.Count > 0 && listItemCart != null)
                        {
                            <div class="uk-width-medium-4-10">
                                <div class="uk-panel">
