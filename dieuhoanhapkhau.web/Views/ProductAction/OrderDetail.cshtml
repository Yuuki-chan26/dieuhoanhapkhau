                            <div class="panel-body">
                                <div class="list-payment">
                                    <div class="item uk-clearfix mb15">
                                        <!-- <input type="radio" id="pay-1" name="payment" value="0" > -->
                                        <label for="pay-1" class="label" style="padding-left: 0">
